function draw♥()
	x = ♥_x
	y = ♥_yup
	
	♥_todraw = ♥_cur
	
	for i=1,(♥_max/2) do
	
		if ♥_todraw > 1 then
			spr(♥_full, x, y)
			♥_todraw -= 2
		elseif ♥_todraw == 1 then
			spr(♥_half, x,y)
			♥_todraw -= 1
		else
			spr(♥_mt, x,y)
		end
		
		x += 4
		
		if y == ♥_yup then
			y = ♥_ydown
		else
			y = ♥_yup
		end
		
	end
	
end

function new♥()
	if new♥timer == 30 then
		new♥timer = 0
		♥_max += 2
	else
		new♥timer += 1
	end
end

function heal♥()
	if healtimer == 20 then
		healtimer = 0
		♥_cur += 1
	else
		healtimer += 1
	end
end


